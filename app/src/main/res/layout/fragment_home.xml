<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/sub_liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WelcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Faculty Dashboard"
                    android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_liner"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:id="@+id/main_linear_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="2dp">

                    <Button
                        android:id="@+id/myProfie"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="148dp"
                        android:layout_height="137dp"
                        android:background="@drawable/edit_text_border"
                        android:text="My Profile"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/profile"
                        android:layout_margin="5dp"/>

                    <Button
                        android:id="@+id/myTimeTable"
                        android:layout_width="148dp"
                        android:layout_height="137dp"
                        android:background="@drawable/edit_text_border"
                        android:text="Time Table"
                        android:textStyle="bold"
                        android:drawableTop="@drawable/timetable"
                        android:layout_margin="5dp"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_linear_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/main_linear_layout2">

                    <Button
                        android:id="@+id/myNotes"
                        android:layout_width="148dp"
                        android:layout_height="137dp"
                        android:background="@drawable/edit_text_border"
                        android:text="Notes"
                        android:drawableTop="@drawable/notes"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        />

                    <Button
                        android:id="@+id/myAppointments"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="148dp"
                        android:layout_height="137dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/edit_text_border"
                        android:text=" My Appointments "
                        android:drawableTop="@drawable/appointment"
                        android:textColor="#000"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>